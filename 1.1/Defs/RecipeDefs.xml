<Defs>

	<RecipeDef Abstract="True" Name="WitcherTrials_Recipe">
		<!-- Logic -->
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<targetsBodyPart>false</targetsBodyPart>
		<!-- End of Recipe -->
	</RecipeDef>
	
	<RecipeDef ParentName="WitcherTrials_Recipe">
		<!-- Description -->
		<defName>WitcherTrials_Recipe_Grasses</defName>
		<label>Trial of the Grasses</label>
		<description>Perform the barbaric witcher trial of the grasses.</description>
		<jobString>Administering the trials.</jobString>
		<!-- Logic -->
		<workerClass>WitcherTrials.RecipeSurgery_Grasses</workerClass> <!-- worker class -->
		<researchPrerequisite>TrialoftheGrasses</researchPrerequisite>
		<!-- Details -->
		<workAmount>3000</workAmount> <!--3000 time action takes -->
		<surgerySuccessChanceFactor>0.5</surgerySuccessChanceFactor> <!--0.3 chance of success -->
		<deathOnFailedSurgeryChance>0.3</deathOnFailedSurgeryChance> <!--0.3 chance of death on failure -->
		<!-- Ingredients -->
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WitcherTrials_Brew_Grasses</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<!-- End of Recipe -->
	</RecipeDef>

