<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ResearchTabDef>
    <defName>WitcherTrialsTab</defName>
    <label>The Witcher Trials</label>
  </ResearchTabDef>
  <!-- Delay Research Overhead -->
  <ResearchProjectDef>
    <tab>WitcherTrialsTab</tab>
    <defName>WitcherTrials</defName>
    <label>The Witcher Trials</label>
    <description>Unlocks the ancient trials of the witchers</description>
    <baseCost>5000</baseCost>
    <techLevel>Neolithic</techLevel>
    <researchViewX>0</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  <!-- Beginning of the 3 Trials -->
  <ResearchProjectDef>
    <tab>WitcherTrialsTab</tab>
    <defName>TrialoftheGrasses</defName>
    <label>Trial of the Grasses</label>
    <description>Performs the first stage of the trials.</description>
    <baseCost>500</baseCost>
    <techLevel>Neolithic</techLevel>
    <prerequisites>
      <li>WitcherTrials</li>
    </prerequisites>
    <researchViewX>1</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <tab>WitcherTrialsTab</tab>
    <defName>TrialoftheDreams</defName>
    <label>Trial of the Dreams</label>
    <description>Performs the second stage of the trials.</description>
    <baseCost>1250</baseCost>
    <techLevel>Neolithic</techLevel>
    <prerequisites>
      <li>TrialoftheGrasses</li>
    </prerequisites>
    <researchViewX>2</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <tab>WitcherTrialsTab</tab>
    <defName>TrialoftheElders</defName>
    <label>Trial of the Elders</label>
    <description>Performs the third stage of the trials.</description>
    <baseCost>2500</baseCost>
    <techLevel>Neolithic</techLevel>
    <prerequisites>
      <li>TrialoftheDreams</li>
    </prerequisites>
    <researchViewX>3</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  <!-- Beginning of the Witcher Swords -->
  <ResearchProjectDef>
    <tab>WitcherTrialsTab</tab>
    <defName>WitcherSwordMaking</defName>
    <label>A Witchers Swords</label>
    <description>Unlock the ritualistic recipes of crafting a Witchers Steel and Silver Swords.</description>
    <baseCost>1000</baseCost>
    <techLevel>Medieval</techLevel>
    <prerequisites>
      <li>WitcherTrials</li>
    </prerequisites>
    <researchViewX>1</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>
</Defs>